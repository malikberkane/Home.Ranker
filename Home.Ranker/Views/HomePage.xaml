<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sharedTransitions="clr-namespace:Plugin.SharedTransitions;assembly=Plugin.SharedTransitions"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    mc:Ignorable="d"
    xmlns:fonts="clr-namespace:Home.Ranker.Fonts"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
    xmlns:controls="clr-namespace:Home.Ranker.Controls"
    x:Class="Home.Ranker.Views.HomePage"
    Shell.NavBarIsVisible="False"
    Title="{Binding Title}"
    x:Name="BrowseItemsPage">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="AddItem_Clicked" />
    </ContentPage.ToolbarItems>




    <AbsoluteLayout>
        <Grid
            RowDefinitions="*,3*"
            AbsoluteLayout.LayoutFlags="All"
            AbsoluteLayout.LayoutBounds="0,0,1,1">
            <Grid
                Grid.Row="0"
                x:Name="ImageLayout"
                BackgroundColor="#3f3d56">
                <BoxView
                    BackgroundColor="White"
                    AbsoluteLayout.LayoutBounds="0,1,.4,.5"
                    AbsoluteLayout.LayoutFlags="All" />

                <BoxView
                    BackgroundColor="White"
                    AbsoluteLayout.LayoutBounds="0,0,.4,1"
                    AbsoluteLayout.LayoutFlags="All" />


                <Image x:Name="homeImage" Aspect="AspectFill" />


            </Grid>


            <ListView
                CachingStrategy="RetainElement"
                Grid.RowSpan="2"
                Grid.Row="0"
                RowHeight="180"
                x:Name="ItemsCollectionView"
                ItemsSource="{Binding Apartments}">

                <ListView.Header>

                    <BoxView HeightRequest="200" />
                    <!--<pancake:PancakeView
                    Padding="10"
                    BackgroundColor="White"
                    CornerRadius="0,0,35,35"
                    VerticalOptions="Start">-->

                    <!--</pancake:PancakeView>-->

                </ListView.Header>

                <ListView.ItemTemplate>
                    <DataTemplate>

                        <controls:AnimatedCell Apartment="{Binding .}" />

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <ImageButton
            AbsoluteLayout.LayoutBounds="0.97,0.97,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            BackgroundColor="Transparent"
            Clicked="AddItem_Clicked"
            Source="{FontImage FontFamily=MaterialFontFamily,
                               Glyph={x:Static fonts:IconFont.AddCircle},
                               Color=#3f3d56,
                               Size=60}" />

    </AbsoluteLayout>
</ContentPage>